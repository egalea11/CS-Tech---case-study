@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <div class="account-buttons">
        <a href="@Url.Action("Index","Home")">
            <img class="shopping-cart" src="~/Images/shopping-basket.jpg" alt="shopping-cart">
        </a>
        @Html.ActionLink("Now in your cart" + User.Identity.Name + " item", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        <ul class="nav navbar-nav navbar-right">
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    </div>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right account-buttons">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
